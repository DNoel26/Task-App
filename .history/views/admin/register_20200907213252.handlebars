<div class="form-container">

    <div>
        <h1>Sign Up</h1>    
    </div>
    <form action="/admin/register"  method="POST">

        <div class="form-control">     

            <label for="first_name">Enter First Name</label>
            <input type="text" id="first_name" name="first_name" value={{form.first_name}}> 
            <div class="error">{{errors.first_name}}</div> 

        </div>

        <div class="form-control">  
                
            <label for="last_name">Enter Last Name</label>
            <input type="text" id="last_name" name="last_name" value={{form.last_name}}> 
            <div class="error">{{errors.last_name}}</div> 

        </div> 

        <div class="form-control">  
                
            <label>Gender</label>

            Male
            <input type="radio" {{#if_equal}} checked <!--{}}-->{{/if_equal}} id="male" name="gender"> 

            Female
            <input type="radio" id="female" name="gender"> 

            <div class="error">{{errors.gender}}</div> 
        </div> 

        <div class="form-control">   
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value={{form.email}}>  
            <div class="error">{{errors.email}}</div> 
        </div> 

        <div class="form-control">    
            <label for="username">Username </label>
            <input type="text" id="username" name="username" value={{form.username}}>
            <div class="error">{{errors.username}}</div> 
        </div> 

        <div class="form-control">    
            <label for="username">Password </label>
            <input type="password" id="password" name="password">
            <div class="error">{{errors.password}}</div> 
        </div> 

        <div class="form-control">    
            <label for="cpassword">Confirm Password </label>
            <input type="password" id="cpassword" name="cpassword">
            <div class="error">{{errors.cpassword}}</div> 

        </div> 

        <div class="form-control">
            <input type="submit" value="Register" class="btn">         
        </div>

    </form>

</div>